<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    android:id="@+id/jobs_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_image_view"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            tools:background="@color/colorPrimaryDark"
            android:scaleType="centerCrop"
            />



    <LinearLayout
        android:id="@+id/job_item_layout"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <!--<ImageView-->
        <!--android:id="@+id/logo_image_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->


    <TextView
        android:id="@+id/git_jobs_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/git_jobs_company_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="company"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/git_jobs_location_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="location"/>

    <TextView
        android:id="@+id/git_jobs_created_at_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="created at"/>



    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Job"/>

    <Button
        android:id="@+id/apply_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply To Job"/>

    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>